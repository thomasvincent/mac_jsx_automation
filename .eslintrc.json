{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      "warn",
      "unix"
    ],
    "quotes": [
      "warn",
      "double"
    ],
    "semi": [
      "warn",
      "always"
    ],
    "no-unused-vars": [
      "warn"
    ],
    "no-console": [
      "off"
    ],
    "no-undef": [
      "warn"
    ]
  },
  "globals": {
    "Application": "readonly",
    "Path": "readonly",
    "app": "writable",
    "importModule": "readonly",
    "Promise": "readonly",
    "console": "readonly",
    "$": "readonly",
    "ObjC": "readonly",
    "delay": "readonly"
  },
  "overrides": [
    {
      "files": ["*.jxa"],
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
